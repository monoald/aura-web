---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../consts'
---

<header>
	<h2><a class='logo' href="/">My Real Estate</a></h2>

	<button id='menu-button' type='button' class="menu">
		<span class="icon-menu" aria-hidden="true"/>
	</button>

	<nav id='menu'>
		<button id='close-menu' class='close-menu'></button>
		<ul>
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/project">Projects</HeaderLink>
			<HeaderLink href="/loans">Loans</HeaderLink>
			<HeaderLink href="/about-us">About us</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</ul>
	</nav>
</header>
<style>
	header {
		position: relative;
		width: 100%;
		height: 2.4em;
		padding: 0 1em;
		border-bottom: 1px solid rgba(255,255,255,0.2);
		display: grid;
		grid-template-columns: 1fr 1.5em;
		grid-template-rows: 1fr;
		justify-items: center;
		align-items: center;
	}
	.logo {
		font-size: var(--font-sm);
		color: var(--font-color-hover);
		text-decoration: none;
	}
	header nav {
		display: none;
	}
	header .active {
		display: flex;
		flex-direction: column;
		align-items: end;
		position: fixed;
		top: 0;
		right: 0;
		width: 15em;
		height: 100vh;
		padding: 1em;
		background-color: var(--background-transparent);
		backdrop-filter: blur(20px);
	}
	header nav ul {
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		padding-top: 2em;
		gap: 0.5em;
		list-style: none;
	}
	header nav a {
		font-size: 0.9rem;
	}
	.menu,
	.close-menu {
		width: 30px;
		height: 30px;
		border: none;
		background: transparent;
		background-image: url('../assets/icons/X.svg');
		background-position: center;
		background-repeat: no-repeat;
		cursor: pointer;
	}
	.menu {
		background-image: url('../assets/icons/menu.svg');
	}
	.close-menu {
		display: flex;
		justify-self: end;
	}
	@media (min-width: 768px) {
		header {
			grid-template-columns: auto 1fr;
			justify-items: end;
			padding-inline: 3em;
		}
		.logo {
			text-align: start;
			font-size: 1.5rem;
		}

		.menu {
			display: none;
		}

		.close-menu {
			display: none;
		}

		header nav {
			display: flex;
			width: fit-content;
			max-width: 560px;
			z-index: 2;
		}

		header nav ul {
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
			padding: 0;
			gap: 0.8em;
		}
	}
</style>
<script is:inline>
	const handleToggleClick = () => {
    const element = document.getElementById('menu')
    element.classList.toggle("active")
  }

	document.getElementById("menu-button").addEventListener("click", handleToggleClick)
	document.getElementById("close-menu").addEventListener("click", handleToggleClick)
</script>
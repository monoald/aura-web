---
import { Image } from 'astro:assets';
import facebookLogo from '../assets/icons/facebook.svg'
import instagramLogo from '../assets/icons/instagram.svg'
import linkedInLogo from '../assets/icons/linkedin.svg'
import twitterLogo from '../assets/icons/twitter.svg'
const today = new Date();
---
<footer>
	<section class="company">
		<h2 class="company__name">My Real Estate</h2>
		
		<figure class="company__social-media">
			<a class='social-media' href='/aura-web/'>
				<Image src={facebookLogo}
					alt="social media account"
					width={34}
					height={34}
				/>
			</a>
			<a class='social-media' href='/aura-web/'>
				<Image src={instagramLogo}
					alt="social media account"
					width={34}
					height={34}
				/>
			</a>
			<a class='social-media' href='/aura-web/'>
				<Image src={linkedInLogo}
					alt="social media account"
					width={34}
					height={34}
				/>
			</a>
			<a class='social-media' href='/aura-web/'>
				<Image src={twitterLogo}
					alt="social media account"
					width={34}
					height={34}
				/>
			</a>
		</figure>
	</section>

	<nav class='Footer__nav-bar'>
		<ul class='list'>
			<li class='list__name'><a href='/aura-web/projects'>Projects</a></li>

			<li class='list__item'><a href='/aura-web/projects#lux' class='list__text'>Palace</a></li>

			<li class='list__item'><a href='/aura-web/projects#goldenMountain' class='list__text'>Lux</a></li>

			<li class='list__item'><a href='/aura-web/projects#lion' class='list__text'>Altar</a></li>
		</ul>

		<ul class='list'>
			<li class='list__name'>
				Others
			</li>

			<li class='list__item'><a href='/aura-web/about-us' class='list__text'>About us</a></li>

			<li class='list__item'><a href='/aura-web/work-with-us' class='list__text'>Work with us</a></li>

			<li class='list__item'><a href='/aura-web/contact' class='list__text'>Contact</a></li>
		</ul>
	</nav>

	<div class='message'>
		<p>
			&copy; {today.getFullYear()} Carlos S. Aldazosa. All rights reserved.
		</p>
	</div>
</footer>
<style>
	footer {
		width: 100%;
		height: fit-content;
		display: flex;
		flex-direction: column;
		padding-block: 1em;
		border-top: 1px solid rgba(244, 240, 240, 0.2);
		color: var(--font-color);
		font-size: var(--font-ln);
	}
	.company {
		height: 30%;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		gap: 20px;
		margin: 0 16%;
		border-bottom: 1px solid var(--font-color);
	}
	.company__name {
		font-size: 2.2rem;
	}
	.company__social-media {
		display: flex;
		gap: 10px;
	}
	.company .social-media {
		opacity: 0.7;
	}
	.company .social-media:hover {
		opacity: 1;
	}
	.Footer__nav-bar {
		height: 50%;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0 5em;
		gap: 13px;
		text-align: center;
	}
	.Footer__nav-bar .list {
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: 5px;
	}
	.Footer__nav-bar .list__item {
		width: 90%;
		height: min-content;
	}
	.list__name {
		font-size: 1.6rem;
		font-weight: 300;
		padding-bottom: 14px;
		cursor: pointer;
	}
	.list__name a {
		display: block;
		color: var(--font-color);
		text-decoration: none;
	}
	.list__name:hover {
		text-decoration: underline;
	}
	.list__text {
		display: block;
		text-decoration: none;
		font-size: 1.2rem;
		color: var(--font-color);
		opacity: 0.7;
	}
	.list__text:hover {
		opacity: 1;
		text-decoration: underline;
	}
	.message {
		height: 20%;
		padding-top: 3em;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--font-color);
		font-size: 0.8rem;
		font-weight: 100;
		opacity: 0.8;
	}

	@media (min-width: 768px) {
		.company__name {
			font-size: 1.8rem;
		}
		.list__name {
			font-size: 1.2rem;
		}
		.list__text {
			font-size: 1rem;
		}
		.Footer__nav-bar {
			width: 21em;
			padding-top: 1em;
			margin: 0 auto;
		}

		.Footer__nav-bar .list {
			min-width: min-content;
		}

		.Footer__nav-bar .list__item {
			width: 100%;
		}
	}
</style>
